<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".fragment.HomeFragment">

    <ImageView
            android:id="@+id/img_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_launcher_foreground"/>

    <TextView
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="30dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/img_logo"
            android:id="@+id/tv_fajr"
            tools:text="Fajr"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>


    <TextView
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fajr"
            android:id="@+id/tv_dhuhr"
            tools:text="Fajr"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    <TextView
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dhuhr"
            android:id="@+id/tv_ashr"
            tools:text="Fajr"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    <TextView
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ashr"
            android:id="@+id/tv_magrib"
            tools:text="Fajr"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    <TextView
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tv_magrib"
            android:id="@+id/tv_isha"
            tools:text="Fajr"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tv_isha"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:id="@+id/divider"
            android:layout_marginEnd="20dp"
            android:background="@android:color/white"
            android:layout_height="1dp"/>

    <TextView
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="30dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:id="@+id/tv_desc"
            android:text="@string/a8"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    <ProgressBar
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/pb_home"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>